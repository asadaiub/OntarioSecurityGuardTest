<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="4dp"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:id="@+id/easyParentCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <com.balysv.materialripple.MaterialRippleLayout
                    style="@style/RippleStyleBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/easyParentCL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:id="@+id/easyProgress"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"

                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            app:cpb_background_progressbar_color="#303030"
                            app:cpb_background_progressbar_width="5dp"
                            app:cpb_progressbar_color="#0AEAFD"
                            app:cpb_progressbar_width="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/easyProgressValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/easyProgress"
                            app:layout_constraintEnd_toEndOf="@+id/easyProgress"
                            app:layout_constraintStart_toStartOf="@+id/easyProgress"
                            app:layout_constraintTop_toTopOf="@+id/easyProgress" />

                        <TextView
                            android:id="@+id/easyProgressTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="8dp"
                            android:text="Test (Easy)"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/easyProgress"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/easyProgressdesc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:text="10 sets \u2022 4 mistakes allowed"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/easyProgress"
                            app:layout_constraintTop_toBottomOf="@+id/easyProgressTitle" />


                    </android.support.constraint.ConstraintLayout>

                </com.balysv.materialripple.MaterialRippleLayout>


            </android.support.v7.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@color/transparent" />


            <android.support.v7.widget.CardView
                android:id="@+id/mediumParentCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <com.balysv.materialripple.MaterialRippleLayout
                    style="@style/RippleStyleBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/mediumParentCL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:id="@+id/mediumProgress"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"

                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            app:cpb_background_progressbar_color="#303030"
                            app:cpb_background_progressbar_width="5dp"
                            app:cpb_progressbar_color="#0AEAFD"
                            app:cpb_progressbar_width="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/mediumProgressValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="18sp"

                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/mediumProgress"
                            app:layout_constraintEnd_toEndOf="@+id/mediumProgress"
                            app:layout_constraintStart_toStartOf="@+id/mediumProgress"
                            app:layout_constraintTop_toTopOf="@+id/mediumProgress" />

                        <TextView
                            android:id="@+id/mediumProgressTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="8dp"
                            android:text="Test (Medium)"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/mediumProgress"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/mediumProgressDesc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:text="10 sets \u2022 4 mistakes allowed"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/mediumProgress"
                            app:layout_constraintTop_toBottomOf="@+id/mediumProgressTitle" />


                    </android.support.constraint.ConstraintLayout>

                </com.balysv.materialripple.MaterialRippleLayout>


            </android.support.v7.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@color/transparent" />


            <android.support.v7.widget.CardView
                android:id="@+id/hardParentCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <com.balysv.materialripple.MaterialRippleLayout
                    style="@style/RippleStyleBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/hardParentCL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:id="@+id/hardProgress"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"

                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            app:cpb_background_progressbar_color="#303030"
                            app:cpb_background_progressbar_width="5dp"
                            app:cpb_progressbar_color="#0AEAFD"
                            app:cpb_progressbar_width="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/hardProgressValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="18sp"

                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/hardProgress"
                            app:layout_constraintEnd_toEndOf="@+id/hardProgress"
                            app:layout_constraintStart_toStartOf="@+id/hardProgress"
                            app:layout_constraintTop_toTopOf="@+id/hardProgress" />

                        <TextView
                            android:id="@+id/hardProgressTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="8dp"
                            android:text="Test (Hard)"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/hardProgress"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/hardProgressDesc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:text="10 sets \u2022 4 mistakes allowed"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/hardProgress"
                            app:layout_constraintTop_toBottomOf="@+id/hardProgressTitle" />


                    </android.support.constraint.ConstraintLayout>

                </com.balysv.materialripple.MaterialRippleLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>


        <android.support.design.bottomappbar.BottomAppBar
            android:id="@+id/bottomBar"
            style="@style/Widget.MaterialComponents.BottomAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="@color/colorPrimary"
            app:fabCradleRoundedCornerRadius="16dp"
            app:navigationIcon="@drawable/menu_icon" />


        <android.support.design.button.MaterialButton
            android:id="@+id/examBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:padding="12dp"
            android:text="Try a Exam"
            android:textAllCaps="false"
            app:cornerRadius="22dp"
            app:icon="@drawable/test_icon"
            app:layout_anchor="@id/bottomBar"
            app:layout_anchorGravity="center|top" />


        <FrameLayout
            android:id="@+id/bottomSheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:background="@color/transparent"
            app:layout_behavior="@string/bottom_sheet_behavior" />
    </android.support.design.widget.CoordinatorLayout>

</android.support.constraint.ConstraintLayout>